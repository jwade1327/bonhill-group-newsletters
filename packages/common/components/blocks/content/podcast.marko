$ const { content, contentUrl, continueReading } = input;

$ const podcastTagStyle = {
  "font-size": "14px",
  "line-height": "18px",
  "color": "#e31e30!important",
  "font-family": "'Arial', 'Helvetica', sans-serif",
  "font-weight": "bold",
  "text-align": "left",
  "text-decoration": "none",
  "text-transform": "uppercase",
  "margin": "0 0 2px 0"
};

<tr style="vertical-align: top; text-align: left; padding: 0;" align="left">
  <td class="eight sub-columns" style="border-collapse: collapse !important; vertical-align: top; text-align: left; min-width: 0px; width: 100%; padding: 0 0 5px 0px;" align="left" valign="top">
    $ const podcastTag = "InvestmentNews Podcast";
    <a align="left" style=podcastTagStyle>${podcastTag}</a>
  </td>
</tr>
<tr style="vertical-align: top; text-align: left; padding: 0;" align="left">
  <td class="eight sub-columns" style="border-collapse: collapse !important; vertical-align: top; text-align: left; min-width: 0px; width: 100%; padding: 0 0 5px 0px;" align="left" valign="top">
    <a style="font-size: 18px; line-height: 22px; color: #000000 !important;  font-family: 'Arial', 'Helvetica', sans-serif; font-weight: bold; text-align: left; text-decoration: none; margin: 0 0 4px; padding: 0;" align="left" href=contentUrl>
      $!{content.name}
    </a>
    <span>&nbsp;&nbsp;
      <img src="data:image/png;base64," style="padding-left: 2px;">
    </span>
  </td>
</tr>
<tr style="vertical-align: top; text-align: left; padding: 0;" align="left">
  <td style="font-size: 14px; line-height: 18px; font-family: 'Arial', 'Helvetica', sans-serif; color: #333333; margin: 0 0 5px; padding: 0;word-break: break-word;" align="left">
    $!{content.teaser}
  </td>
</tr>
